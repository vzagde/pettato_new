<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kreaserv.neonbuzz" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Pettato</name>
    <description>
        Pettato App
    </description>
    <author email="vishal@notchitup.in" href="http://notchitup.in">
        Notch It Up Team
    </author>
    <content src="index.html" />
    <gap:plugin name="cordova-plugin-social-message" source="npm" />
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />
    <icon src="app_icon.png" />
    <icon density="mdpi" height="57" platform="android" src="app_icon.png" width="57" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="http://notchitup.in/*/*" />
    <allow-intent href="https://notchitup.in/*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
